# Database
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:6543/postgres?pgbouncer=true

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Frontend Supabase (Duplicate of Server vars)
NEXT_PUBLIC_SUPABASE_URL=...
NEXT_PUBLIC_SUPABASE_ANON_KEY=...

# Encryption (32 chars)
ENCRYPTION_KEY=...

# API
API_PORT=3001
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logger
LOG_LEVEL=info
LOG_PRETTY=true

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-upstash-id.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# CurrencyFreaks
CURRENCYFREAKS_API_KEY=your-api-key
